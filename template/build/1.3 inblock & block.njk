{% extends "../iframes.njk" %}

{% block title %}
    1-3
{% endblock %}

{% block style %}
    .center-parent {

    }
    .center-x {
        margin-left: 50%;
        transform: translateX(-50%);
    }
{% endblock %}

{% block content %}
    <h3 class="container">block/inline-block</h3>
    <h3 class="target">width + margin-left: 50% + transform: translateX(-50%)</h3>
    <h3>block</h3>
    <div class="center-parent block ">
        <div class="center-x block ">block </div>
        <div class="center-x inblock">inblock</div>
    </div>
    <h3>inblock</h3>
    <div class="center-parent inblock ">
        <div class="center-x block auto-size">block, auto size -> half of container</div>
        <div class="center-x block fixed-size">block, fixed size</div>
        <div class="center-x inblock auto-size">inblock, auto size</div>
        <div class="center-x inblock fixed-size">inblock, fixed size</div>
    </div>
{% endblock %}
